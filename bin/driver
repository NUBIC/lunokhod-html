#!/usr/bin/env ruby

$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)

require 'lunokhod'
require 'lunokhod/html'

file = ARGV[0]
output_dir = ARGV[1]

if !file || !output_dir
  puts "Usage: #$0 FILE OUTPUT_DIR"
  exit 1
end

data = File.read(file)

p = Lunokhod::Parser.new(data, file)

p.parse

ep = Lunokhod::ErrorReport.new(p.surveys)
ep.run

if ep.errors?
  $stderr.puts ep
  exit -1
end

r = Lunokhod::Resolver.new(p.surveys)
r.run

b = Lunokhod::Html::Backend.new(output_dir)
c = Lunokhod::Compiler.new(p.surveys, b)
c.compile
b.write
